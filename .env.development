# =============================================================================
# Development Environment Configuration
# =============================================================================
# 
# This file contains development-specific settings.
# Copy values to your .env file and customize as needed.
#
# =============================================================================

# =============================================================================
# Development AI Provider Settings
# =============================================================================

# Use faster/cheaper models for development
OPENAI_MODEL=gpt-3.5-turbo
ANTHROPIC_MODEL=claude-3-haiku-20240307
GEMINI_MODEL=gemini-1.5-flash
OPENROUTER_MODEL=openai/gpt-3.5-turbo

# Development AI Parameters
AI_TEMPERATURE=0.8          # Higher creativity for testing
AI_MAX_TOKENS=300          # Shorter responses for faster testing
AI_TIMEOUT=15              # Shorter timeout for development

# =============================================================================
# Development Application Settings
# =============================================================================

# Application Settings
APP_TITLE=Context Engineering Demo (Dev)
DEBUG=true                 # Enable debug mode
LOG_LEVEL=DEBUG           # Verbose logging for development

# Performance Settings (optimized for development)
ENABLE_CACHING=false      # Disable caching to see fresh responses
CACHE_TTL=300            # Shorter cache TTL for development
CONTEXT_REFRESH_INTERVAL=60  # More frequent context refresh

# =============================================================================
# Development Features
# =============================================================================

# Enable additional development features
SHOW_DEBUG_INFO=true      # Show debug information in UI
ENABLE_METRICS=true       # Enable performance metrics
MOCK_AI_RESPONSES=false   # Set to true to use mock responses for testing

# =============================================================================
# Development Notes
# =============================================================================
#
# Development Tips:
# - Use cheaper AI models to reduce costs during development
# - Enable debug logging to troubleshoot issues
# - Disable caching to see immediate changes
# - Consider using mock responses for UI testing
# - Monitor API usage even in development
#
# =============================================================================